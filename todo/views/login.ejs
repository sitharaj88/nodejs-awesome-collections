<!-- views/login.ejs -->
<html>

<head>
  <title>Login</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-pzjw8ViT6vz8wkb4j3XvB8Mz+Cv4Fq+9qUd6LsLP5J+mF4BtqieL0C5nY8w7W+cK" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    integrity="sha512-P/BDpf2JEj8EiPcY+f6/xM3O8xQKuZI0TYEiWxVlqqah0YHuUIeehMu2T9svyz8n6p6gTuig1a/EySM/EmKe1g=="
    crossorigin="anonymous" referrerpolicy="no-referrer">
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #f5f5f5;
    }

    .login-container {
      width: 400px;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .login-heading {
      text-align: center;
      margin-bottom: 30px;
    }

    .login-heading h2 {
      margin-bottom: 10px;
      font-size: 24px;
      font-weight: bold;
    }

    .login-heading p {
      font-size: 14px;
      color: #777;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      font-weight: bold;
      display: block;
    }

    .form-group input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      transition: border-color 0.3s ease-in-out;
    }

    .form-group input:focus {
      border-color: #4285f4;
      outline: none;
    }

    .form-group .icon {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      right: 10px;
      color: #777;
    }

    .form-group .icon i {
      font-size: 18px;
    }

    .login-button {
      width: 100%;
      padding: 10px;
      border: none;
      border-radius: 4px;
      background-color: #4285f4;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease-in-out;
    }

    .login-button:hover {
      background-color: #3367d6;
    }

    .forgot-password {
      text-align: right;
      margin-top: 10px;
    }

    .forgot-password a {
      color: #4285f4;
      text-decoration: none;
    }

    .register-link {
        text-align: center;
        margin-top: 10px;
      }

      .register-link p {
        font-size: 14px;
        color: #777;
      }

      .register-link a {
        color: #4285f4;
        font-weight: bold;
        text-decoration: none;
        transition: color 0.3s ease-in-out;
      }

      .register-link a:hover {
        color: #3367d6;
      }

    
  </style>

  <script>
    // Check if the current page is the login page
    if (window.location.href.includes('/auth/login')) {
      // Replace the current history state with the index page
      window.history.replaceState(null, null, '/');

      // Add an event listener to prevent navigating back to the login page
      window.addEventListener('popstate', function (event) {
        window.history.pushState(null, null, '/');
      });
    }
  </script>

</head>

<body>
  <div class="login-container">
    <div class="login-heading">
      <h2>Login</h2>
      <p>Sign in to your account</p>
    </div>
    <form action="/auth/login" method="POST">
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required>
        <span class="icon"><i class="fas fa-user"></i></span>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
        <span class="icon"><i class="fas fa-lock"></i></span>
      </div>
      <button class="login-button" type="submit">Login</button>
      <div class="forgot-password">
        <a href="#">Forgot password?</a>
      </div>
      <div class="register-link">
        <p>Don't have an account? <a href="/auth/register">Register</a></p>
      </div>
    </form>
  </div>
</body>

</html>